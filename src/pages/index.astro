---
import BaseLayout from '../layouts/BaseLayout.astro';
import { config } from '../config.js';
---
<BaseLayout title="Ianis Brébion">
  <div class="welcome">
    <div class="container container--mini container--padding">
      <div class="welcome__title">
        Bienvenue !
      </div>
      <div class="welcome__content">
        <p>
          Je suis développeur web fullstack (Symonfy/ReactJS) &amp; ScrumMaster chez <a href="https://www.greenflex.com/" target="_blank" class="welcome__company">GreenFlex</a>
        </p>
        <p>
          Découvrez ma <a href="/about/">présentation</a> {config.blogEnable && `et mon <a href="/blog/">blog</a>`}
        </p>
      </div>
      <div class="welcome__links">
        <a href="/assets/CV-Ianis-Brebion.pdf" class="link link--block" target="_blank">Curriculum Vitae</a>
        <a href="/contact/" class="link link--block">Contactez-moi</a>
      </div>
      <div class="welcome__links">
        <a href="https://www.linkedin.com/in/ianisbrebion/" class="link link--block" target="_blank">LinkedIn</a>
        <a href="https://twitter.com/lemonkii" class="link link--block" target="_blank">Twitter</a>
      </div>
    </div>
  </div>
</BaseLayout>
